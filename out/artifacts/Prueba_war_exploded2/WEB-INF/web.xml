<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <!-- Nombre de la aplicación -->
  <display-name>Gestión de Carrito</display-name>

  <!-- Configuración de los servlets -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.german.Controladores.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.german.Controladores.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProductoServlet</servlet-name>
    <servlet-class>com.german.Controladores.ProductoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CarritoServlet</servlet-name>
    <servlet-class>com.german.Controladores.CarritoServlet</servlet-class>
  </servlet>

  <!-- Configuración de los mappings -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductoServlet</servlet-name>
    <url-pattern>/productos</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CarritoServlet</servlet-name>
    <url-pattern>/carrito</url-pattern>
  </servlet-mapping>

  <!-- Configuración de parámetros globales (si aplica) -->
  <context-param>
    <param-name>baseURL</param-name>
    <param-value>/Prueba</param-value>
  </context-param>

  <!-- Configuración de bienvenida -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>login.html</welcome-file>
  </welcome-file-list>
</web-app>










